\begin_inset Formula $P_{5}=\left\{ \left\{ 2,3\right\} ,\left\{ 1,4\right\} \right\} $
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $P_{6}=\left\{ \left\{ 2,4\right\} ,\left\{ 1,3\right\} \right\} $
\end_inset


\end_layout

\begin_layout Enumerate
\begin_inset Formula $P_{7}=\left\{ \left\{ 3\right\} ,\left\{ 1,2,4\right\} \right\} $
\end_inset


\end_layout

\end_deeper
\begin_layout Enumerate
Six partitions of 
\begin_inset Formula $A$
\end_inset

 with three parts.
\end_layout

\begin_deeper
\begin_layout Enumerate
\begin_inset Formula $P_{1}=\left\{ \left\{ 1,2\right\} ,\left\{ 3\right\} ,\left\{ 4\right\} \right\} $
\end_inset


\end_layout

\begin_layout Enumerate
